<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>crearCliente</servlet-name>
        <servlet-class>controlador.crearCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crearProducto</servlet-name>
        <servlet-class>controlador.crearProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminarCliente</servlet-name>
        <servlet-class>controlador.eliminarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminarProducto</servlet-name>
        <servlet-class>controlador.eliminarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscarModificarCliente</servlet-name>
        <servlet-class>controlador.buscarModificarCliente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crearCliente</servlet-name>
        <url-pattern>/crearCliente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crearProducto</servlet-name>
        <url-pattern>/crearProducto.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminarCliente</servlet-name>
        <url-pattern>/eliminarCliente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminarProducto</servlet-name>
        <url-pattern>/eliminarProducto.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscarModificarCliente</servlet-name>
        <url-pattern>/buscarModificarCliente.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
